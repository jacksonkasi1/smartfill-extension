{
  "name": "smartfill-extension-clerk",
  "displayName": "SmartFill - AI Form Filler",
  "version": "1.0.1",
  "description": "SmartFill Chrome Extension with Clerk Authentication",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["chrome-extension", "clerk", "auth", "form-filling"],
  "author": "SmartFill Team",
  "license": "ISC",
  "type": "module",
  "manifest": {
    "name": "SmartFill - AI Form Filler",
    "permissions": ["storage", "activeTab", "tabs", "scripting", "cookies"],
    "host_permissions": ["http://localhost/*", "http://127.0.0.1/*", "http://*:*/*", "https://smartfill.vercel.app/*", "https://patient-wildcat-29.clerk.accounts.dev/*"]
  },
  "devDependencies": {
    "@types/chrome": "^0.1.4",
    "@types/node": "^22.5.4",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "plasmo": "^0.90.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@clerk/chrome-extension": "^2.5.23",
    "axios": "^1.11.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}

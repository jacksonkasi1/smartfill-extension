{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@smartfill/*": [
        "../../packages/*/src"
      ]
    },
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "../../packages/shared-types"
    },
    {
      "path": "../../packages/auth-client"
    },
    {
      "path": "../../packages/config"
    }
  ]
}
